<!-- edit post -->
<div class="col">
  <div class="edit-post card bg-secondary m-3">
    <form class="form post-form">
      <div class="card-header">
        <h4 style="margin: 0">Edit Post</h4>
      </div>
      <div class="card-body">
        <div class="form-group title mb-3">
          <label for="edit-post-title" class="form-label">Title</label>
          <textarea class="form-control form-control-sm" id="edit-post-title" rows="1">{{title}}</textarea>
        </div>
        <div class="form-group description mb-4">
          <label for="edit-post-description" class="form-label">Description:</label>
          <textarea class="form-control form-control-sm" id="edit-post-description" rows="3">{{description}}</textarea>
        </div>
        <button type="submit" class="btn btn-success" id="update-post-btn">Update</button>
        <button type="submit" class="btn btn-danger" id="delete-post-btn">Delete</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update-post.js"></script>
<script src="/js/delete-post.js"></script>