<!-- sign up -->
<div class="col">
  <div class="login card bg-secondary m-3">
    <form class="form login-form">
      <div class="card-header">
        <h4 style="margin: 0">Login</h4>
      </div>
      <div class="card-body">
        <div class="form-group species mb-3">
          <label for="login-username" class="form-label">Username</label>
          <textarea class="form-control form-control-sm" id="login-username" rows="1" placeholder="Enter Username"></textarea>
        </div>
        <div class="form-group age mb-4">
          <label for="login-password" class="form-label">Password</label>
          <input class="form-control form-control-sm" type="password" id="login-password"
            placeholder="Enter Password"></input>
        </div>
        <button type="submit" class="btn btn-primary" id="login-btn">Login</button>
      </div>
    </form>
    <a href="/signup">Sign up instead</a>
  </div>
</div>

<script src="/js/login.js"></script>